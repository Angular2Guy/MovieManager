	</changeSet>
	<changeSet id="37" author="angular2guy" dbms="postgresql">
		<alterSequence sequenceName="hibernate_sequence" incrementBy="10" />
	</changeSet>	
	<changeSet author="angular2guy" id="38" dbms="!postgresql">
		<preConditions onFail="MARK_RAN">
			<sequenceExists sequenceName="hibernate_sequence"/>
		</preConditions>		
        <dropSequence sequenceName="hibernate_sequence"/>
	</changeSet>
	<changeSet author="angular2guy" id="39" dbms="!postgresql">
		<createSequence sequenceName="hibernate_sequence" startValue="1000" incrementBy="10"/>
	</changeSet>
	<changeSet id="40" author="angular2guy" dbms="!postgresql">
		<modifyDataType tableName="movie" columnName="overview" newDataType="varchar(10240)"/>
		<modifyDataType tableName="actor" columnName="biography" newDataType="varchar(10240)"/>
	</changeSet>
	<changeSet id="41" author="angular2guy">
		<addColumn tableName="user1">
			<column defaultValue="0" type="bigint" name="migration"/>
		</addColumn>
